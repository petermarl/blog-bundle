<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="{{ asset('bundles/flowfusionblog/css/frontend.css') }}" />
    <title>{% block page_title %}{% endblock %}</title>
</head>
<body>

{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}

<div class="container">
    <div class="header">
        <h1>{{ block('page_title') }}</h1>
        <div class="menu">
            {{ knp_menu_render('FlowFusionBlogBundle:Builder:categoriesMenu') }}
        </div>
    </div>
    {% block ff_blog_content %}
    {% endblock ff_blog_content %}
</div>

</body>
</html>
